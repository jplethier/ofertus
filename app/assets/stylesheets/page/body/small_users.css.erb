div.small_user { clear: both; }

div.small_user .side_user { clear: both; height: 70px;}

div.small_user .side_user_info { border-top: solid; margin: 0 0 15px; clear: both; height: 70px; padding: 15px 0; }

div.small_user .side_user_info_first { border-top: none; margin: 0 0 15px; clear: both; height: 70px; }

div.small_user .user_picture { background: white; border: 1px solid #CCC; display: block; float: left; height: 50px; overflow: hidden; margin: 0 5px 5px 0; overflow: hidden; padding: 5px; width: 50px; -moz-box-shadow: 1px 1px 3px #ddd; }

div.small_user .infos p a { color: #666; text-decoration: none; }
div.small_user .infos p a:hover { color: #666; text-decoration: underline; }