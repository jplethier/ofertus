.deal_picture img { max-width: 210px; max-height: 210px; }
.deal_picture_small img { max-width: 150px; max-height: 150px; }
.detalhe-oferta .right img { max-width: 210px; }
.detalhe-oferta .tx-off ul { max-width: 200px; float: left; margin-bottom: 10px; }

#go_to_site { display: inline-block; margin-top: 0px; }
#go_to_site .go_to_site_button { background: url(<%= asset_path 'go_to_site.png' %>) no-repeat; width: 110px; height: 30px; display: block; }
#go_to_site #big_button { background: url(<%= asset_path 'big_go_to_site.png' %>) no-repeat; width: 210px; height: 50px; }

.deal { border-bottom: 1px dashed #E0E0E0; margin-bottom: 15px; }

a.more_info { color: #444; text-decoration: none; font-family: 'Colaborate-Thin', 'Arial'; margin-left: 20px; }
a.more_info:hover { text-decoration: underline; color: #444; font-family: 'Colaborate-Thin', 'Arial'; }

.old_deals .ttGlHome { background: gray; }
.old_deals .ttGlHome h2 { color: gray; }

.old_deal { border-bottom: none !important; margin-left: 10px; margin-right: 10px; display: inline-block;} 
.old_deal .tx-off { width: 170px !important; }
.old_deal .tx-off a { color: gray !important; }
.old_deal .tx-off a img { max-width: 150px; max-height: 150px; }
.old_deal .off .col-off .preco-off { background: url(<%= asset_path 'bg-preco-off-old.png' %>) no-repeat !important; }
span#p_description { width: 290px; }