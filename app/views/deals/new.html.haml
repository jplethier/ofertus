#col-left
  .ttGlHome
    %h2= t('strings.new_offer')

  .page-login
    %h3= t('strings.fill_fields_to_share')
    
    .ct-inputs-login
      = form_for(@deal) do |f|
        %p
          = f.label :title
          %br
          = f.text_field :title, :class => 'user-senha'
        .clear
        %p
          = f.label :kind
          %br
          = f.select :kind, Deal.i18n_kinds, {:include_blank => 'Selecione'}, {'data-switcher' => "1:#p_deal_price,#p_deal_real_price||2:#p_deal_price,#p_deal_real_price||3:#p_deal_discount", :class => 'user-senha' }
        .clear
        %p#p_deal_real_price
          = f.label :real_price
          %br
          = f.text_field :real_price_mask, :class => "money user-senha"
        .clear
        %p#p_deal_price
          = f.label :price
          %br
          = f.text_field :price_mask, :class => "money user-senha"
        .clear
        %p#p_deal_discount
          = f.label :discount
          %br
          = f.text_field :discount, :class => "user-senha"
          %span Somente nÃºmeros
        .clear
        %p
          = f.label :category
          %br
          = f.select :category, Deal.i18n_categories, {:include_blank => 'Selecione'}, :class => 'user-senha'
        .clear
        %p
          = f.label :description
          %br
          = cktext_area :deal, :description, :toolbar => 'Basic'
        .clear
        %p
          = f.label :end_date
          %br
          = f.text_field :end_date, :class => "datepicker user-senha"
          %span Informe a data no formato dd/mm/aaaa
        .clear
        %p
          = f.label :link
          %br
          = f.text_field :link, :class => 'user-senha'
          %span O link deve ser no formato http:// ou https://
        .clear
        %p
          = f.label :image_url
          %br
          = f.text_field :image_url, :class => 'user-senha'
          %span O link deve ser no formato http:// ou https://
        .clear
        %p
          = f.label :company 
          %br
          = f.text_field :company, :class => 'user-senha'
        .clear
        %p.last
          = f.label :city_id
          %br
          = f.select(:city_id, unsorted_grouped_options_for_select(@cities_state_hash), {:include_blank => 'Selecione'}, :class => 'user-senha' )

        %br.clear
        = f.submit "", :class => 'bt-confirmar'

:plain            
  <script type="text/javascript">
    $(function(){
      $(".money").maskMoney({symbol:"R$ ", decimal:",", thousands:"."})
      $( ".datepicker" ).datepicker({
        showButtonPanel: true, dateFormat: 'dd/mm/yy', minDate: new Date()
      });
    });
  </script>
