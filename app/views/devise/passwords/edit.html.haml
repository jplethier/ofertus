.main
  .window.medium_window
    .up
    .middle.newProfile#userCreateAreaId
      %div

        %h1 Ofertus
        %h3 Editar senha

        = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
          = devise_error_messages!
          = f.hidden_field :reset_password_token

          %ol
            %li
              = f.label :password, "Nova senha"
              = f.password_field :password
            
            %li
              = f.label :password_confirmation, "Confirmar nova senha"
              = f.password_field :password_confirmation
          
          .button
            %p= f.submit "Change my password", :type=>"image", :src=> asset_path('botao.png'), :alt=> "Confirmar"
          
        = render :partial => "devise/shared/links"
    
    .down