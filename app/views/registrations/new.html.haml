.span8
  .main
    .window.medium_window
      .middle.newProfile#userCreateAreaId
        %h1 OfertuS
        %h3 Crie seu perfil preenchendo os campos abaixo e comece a compartilhar ofertas com seus amigos
        = link_to "entre com sua conta do facebook", user_omniauth_authorize_path(:facebook), :class => "facebook_login_button"

        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          %ol
            %li
              = f.label :email
              - if resource.provider?
                = resource.email
                = f.hidden_field :email
              - else
                = f.text_field :email
            %li
              = f.label :username
              = f.text_field :username
              %span.limite
                Mínimo
                %strong 5
                e máximo
                %strong 20
                caracteres.
            %li
              = f.label :name
              = f.text_field :name
            - if @user.password_required?
              %li
                = f.label :password
                = f.password_field :password
                %span.limite
                  Mínimo
                  %strong 6
                  caracteres.
              %li
                = f.label :password_confirmation
                = f.password_field :password_confirmation              
            %li
              %span.agree
                = check_box_tag(:terms_privacy, :terms_privacy)
                %label{ :for => "terms_privacy" } 
                  Concordo com os 
                  = link_to 'termos de uso', pages_termsofuse_path, :target=> "_blank"
                  e 
                  = link_to 'política de privacidade', pages_privacypolicy_path, :target=>"_blank"
                  do site
            / TODO: RECAPTCHA
            /%li
            /  %label Digite as letras:
            /  %img{ :src => "../simpleCaptcha", :class => "captcha" }
            /  %input{ :type => "text", :tabindex => "10", :class => "captcha", :maxlength => "10"}
          .button= f.submit "Criar perfil", :type=>"image", :src=> asset_path('botao.png'), :alt=> "Confirmar"
        
