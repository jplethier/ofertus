#sem-col
  #home_actions
    #box-compartilhe
      .ttGlHome
        %h2= t('strings.register_offer')
      %form{ :action => share_deals_path, :method => "get.share_offer_url"}
        .border-input-busca
          = text_field_tag :share, params[:share], :title => "Cadastre uma oferta", :placeholder => t('strings.paste_deal_url'), :class => "resetValue input-tx"
          %button#share.submit{ :title => "Compartilhar", :value => "OK" } OK

    #box-search
      .ttGlHome
        %h2= t('strings.search_offer')
      %form{ :id => "search_form", :action => deals_path, :method => "get", :class => "search"}
        .border-input-busca
          = text_field_tag :search, params[:search], :class => "input-tx", :placeholder => 'Pesquisa'
          %input{ :type => "submit", :value => "", :class => "submit", :id => 'search_button'}

        .border-input-busca.select
          = select_tag "search_order", search_options(params[:search_order]), :class => 'user-senha'

        .border-input-busca.select
          = select_tag "search_city", search_city_options(params[:search_city]), :class => 'user-senha'


  .clear
  .ttGlHome#ofertus_top
    %h2= t('strings.ofertus_top')
  .list-conteudo#home_list
    - @deals.each_with_index do |deal, index|
      %div{ :class => "top_deal #{index == 0 || index == 3 ? 'first' : (index == 2 || index == 5 ? 'last' : '')}" }
        = render :partial => 'deals/side_deal', :locals => {:deal => deal, :index => index }
  .ttGlHome#ofertus_users
    %h2= t('strings.who_is_using')
  .list-conteudo
    - @users.each_with_index do |user, index|
      %div{ :class => "top_user #{index == 0 || index == 3 ? 'first' : (index == 2 || index == 5 ? 'last' : '')}" }
        = render 'users/top_user', :user => user, :index => index

  #search_users
    .border-input-busca
      %form{ :action => users_path, :method => "get" }
        = text_field_tag :search, params[:search], :class => "input-tx", :placeholder => 'Ache seus amigos e siga'
        %button#search_button.submit{ :type => "submit" }