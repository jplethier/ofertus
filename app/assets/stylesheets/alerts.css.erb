.alert {
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  -moz-box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  -webkit-box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-top-left-radius: 5px 5px;
  border-top-right-radius: 5px 5px;
  border-bottom-right-radius: 5px 5px;
  border-bottom-left-radius: 5px 5px;  

  width: 100%;
  border: 2px solid #CF0000;
  padding: 0px;
  padding-bottom: 12px;
  margin-bottom: 10px;
  background-color: #f0f0f0;
}

.alert h2 { text-align: left; font-weight: bold; padding: 5px 5px 5px 15px; font-size: 10pt; margin: 0; background-color: #c00; color: #fff; }
  
.alert p { color: #333; margin-bottom: 0; padding: 8px; }

.flashes { margin: 5px 10px; font-size: 14pt; font-weight: normal; }

.flashes .flash { border-radius: 10px; margin-bottom: 5px; }

.error, .notice, .success { padding: .8em; border: 2px solid #ddd; }

.error { background: #FBE3E4; color: #8a1f11; border-color: #FBC2C4; }
.notice { background: #FFF6BF; color: #514721; border-color: #FFD324; }
.success { background: #E6EFC2; color: #264409; border-color: #C6D880; }

.field_with_errors input { border: 1px solid red !important; }
.field_with_errors label { color: red; }