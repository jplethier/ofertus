#sem-col
  .ttGlHome
    %h2= Deal.i18n_category(@deal.category)

  .list-conteudo.detalhe-oferta
    
    .left.off
      .col-off
        - if @deal.price?
          %h4= t('strings.original_price', :price => number_to_currency(@deal.real_price)).html_safe

        .preco-off
          %h4= t('strings.offer_price', :price => number_to_currency(@deal.price)).html_safe

        %h5= t('strings.discount', :discount => "#{@deal.discount.to_i}%")
        %h5= t('strings.end_date', :end_date => @deal.end_date? ? l(@deal.end_date.to_date) : "-")

    .left.tx-off
      %h3
        %a{ :href => @deal.link, :target => '_blank'}= @deal.title

      .user-off
        - if @deal.user.provider?
          = link_to(image_tag(@deal.user.facebook_profile_picture(:small), :alt => @deal.user.username, :title => @deal.user.username), user_path(@deal.user.username), :class => "user_picture")
        - else
          = link_to(image_tag(@deal.user.gravatar_url(:size => 50), :alt => @deal.user.username, :title => @deal.user.username), user_path(@deal.user.username), :class => "user_picture")
        %h4= t('strings.shared_by')
        %span= link_to @deal.user.name, user_path(@deal.user.username)

      %ul
        %li= t('strings.category', :category => Deal.i18n_category(@deal.category))
        %li= t('strings.company', :company => @deal.company)
        %li= t('strings.city', :city => @deal.city.name)

    .share-off
      - if user_signed_in?
        %span.gostei
          - if current_user.up_voted? @deal
            = link_to t('strings.undo_upvote'), unvote_deal_path(@deal)
          - else
            = link_to t('strings.upvote'), upvote_deal_path(@deal)
          = " - #{@deal.up_votes} gostou!"
        %span.nao-gostei
          - if current_user.down_voted? @deal
            = link_to t('strings.undo_downvote'), unvote_deal_path(@deal)
          - else
            = link_to t('strings.downvote'), downvote_deal_path(@deal)
          = " - #{@deal.down_votes} não gostou!"

    .right
      - if @deal.image_url
        = image_tag(@deal.image_url, :alt => @deal.image_url, :title => @deal.title, :size => '10px')
      - else
        = image_tag(asset_path('no_picture_big.png'), :alt => "Oferta sem imagem", :title => @deal.title, :size => '10px')

  .desc-off
    %h4= t('strings.description')
    .tx-desc
      

  .right-detalhe-comment-off
  
    .comment-off
      %h4 Comentários
      .tx-desc
        %textarea
        %input{ :type => "submit", :class => "bt-comentar"}
        .clear

    #ct-comment-off
      .list-comment-off
        %img{ :src => "http://placehold.it/50x50" }
        %p promoção muito boa
        %span
          %a{ :href => ""} jplethier
          em 05/07/2012

  .clear
