#sem-col
  .ttGlHome
    %h2= t('strings.search_results')
    %form{ :id => "search_form_2", :action => users_path, :method => "get", :class => "search"}
      .border-input-busca
        = text_field_tag :search, params[:search], :class => "input-tx", :placeholder => 'Pesquisa'
        %input{ :type => "submit", :value => "", :class => "submit search_button" }

  .search_filters
    %ul#users_filters.quick_filters
      %li= link_to t('search.filters.more_active'), users_path + "?search_scope=more_active"
      %li= link_to t('search.filters.more_popular'), users_path + "?search_scope=more_popular"
      %li= link_to t('search.filters.more_deals'), users_path + "?search_scope=more_deals"
      %li= link_to t('search.filters.month_points_rank'), users_path + "?search_scope=month_points_rank"
      %li= link_to t('search.filters.more_points'), users_path + "?search_scope=more_points"
  .clear

  = render 'users_list', users: @users