.left
  - if user.provider?
    = link_to(image_tag(user.facebook_profile_picture("square"), :alt => user.username, :title => user.username), user_path(user.username), :class => "user_picture")
  - else
    = link_to(image_tag(user.gravatar_url(:size => 50), :alt => user.username, :title => user.username), user_path(user.username), :class => "user_picture")
.left
  %h3
    = link_to truncate_name(user.name, 21), user_path(user.username)
  %span
    = user.deals.length
    ofertas compartilhadas!
.clear
.action_btn
  = link_to t('actions.follow'), user_path(user.username), :class => 'btn_follow_user'