#footer
  #ft-center
    .left
      %h3= t('footer.about')
      %ul
        %li
          %a{ :href => "/pages/whoarewe" }= t('footer.who_are_we')
        %li
          %a{ :href => "/pages/how_it_works" }= t('footer.how_it_works')
        %li
          %a{ :href => "http://blog.ofertus.com.br"}= t('footer.blog')

    .left.cat-left
      %h3= t('footer.categories')
