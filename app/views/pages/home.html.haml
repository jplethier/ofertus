#sem-col
  .ttGlHome#ofertus_top
    %h2= t('strings.ofertus_top')
  .list-conteudo
    - @deals.each_with_index do |deal, index|
      %div{ :class => "top_deal #{index == 0 || index == 3 ? 'first' : (index == 2 || index == 5 ? 'last' : '')}" }
        = render :partial => 'deals/side_deal', :locals => {:deal => deal, :index => index }
  .ttGlHome#ofertus_users
    %h2= t('strings.who_is_using')
  .list-conteudo
    - @users.each_with_index do |user, index|
      %div{ :class => "top_user #{index == 0 || index == 3 ? 'first' : (index == 2 || index == 5 ? 'last' : '')}" }
        = render 'users/top_user', :user => user, :index => index