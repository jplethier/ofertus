          %a{ :href => "#{today? ? 'deals/today/computer' : 'deals/active/computer'}"}= Deal.i18n_category(Deal::CATEGORY_COMPUTER)
        %li
          %a{ :href => "#{today? ? 'deals/today/entertainment' : 'deals/active/entertainment'}" }= Deal.i18n_category(Deal::CATEGORY_ENTERTAINMENT)
        %li
          %a{ :href => "#{today? ? 'deals/today/home_and_appliance' : 'deals/active/home_and_appliance'}" }= Deal.i18n_category(Deal::CATEGORY_HOME_AND_APPLIANCE)
        %li
          %a{ :href => "#{today? ? 'deals/today/travel' : 'deals/active/travel'}" }= Deal.i18n_category(Deal::CATEGORY_TRAVEL)

    .left
      %h3 &nbsp;
