%div{ class: "top_deal #{index == 0 || index == 3 ? 'first' : ''}" }
  .image
    %a{ href: deal_path(deal) }
      %img{ src: deal.get_image_url }
  
  .details
    %h4= link_to truncate_title(deal.title, 50), deal_path(deal)
    .user_picture
      %img{ src: deal.user.facebook_profile_picture('small') }
    .user_infos
      = truncate_name(deal.user.name)

  .discount
