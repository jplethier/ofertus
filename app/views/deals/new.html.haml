#sem-col
  .ttGlHome
    %h2= t('strings.new_deal')
    %h3= t('strings.how_to_share')

  .new_deal_left
    .title= t('strings.quick_share')
    .description= t('strings.quick_share_description').html_safe

    #box-compartilhe_2
      %form{ action: share_deals_path, method: "get.share_offer_url" }
        .border-input-busca
          = text_field_tag :share, params[:share], :title => "Cadastre uma oferta", :placeholder => t('strings.paste_deal_url'), :class => "resetValue input-tx"
          %button#share.submit{ title: "Compartilhar", value: "OK" } OK

    .clear

    .partners_list
      %h4= t('strings.partners')
      = link_to t('strings.all'), partners_path, target: '_blank'

      %ul
        %li
          %img{ src: '/assets/partners/americanas.png' }
        %li
          %img{ src: '/assets/partners/saraiva.png' }
        %li
          %img{ src: '/assets/partners/giulianaflores.png' }
        %li
          %img{ src: '/assets/partners/girafa.png' }
        %li
          %img{ src: '/assets/partners/comprafacil.png' }
        %li
          %img{ src: '/assets/partners/carrefour.png' }
        %li
          %img{ src: '/assets/partners/dafiti.png' }
        %li
          %img{ src: '/assets/partners/ana_hickmann.png' }
        %li
          %img{ src: '/assets/partners/fnac.png' }
        %li
          %img{ src: '/assets/partners/lojasmm.png' }
        %li
          %img{ src: '/assets/partners/mobly.png' }
        %li
          %img{ src: '/assets/partners/polishop.png' }
        %li
          %img{ src: '/assets/partners/toymania.png' }

  .new_deal_right
    .title= t('strings.detailed_share')
    
    .ct-inputs-login
      = form_for(@deal) do |f|
        .big_column.left
          %p
            %div
              = f.label :title
            %div
              = f.text_field :title
        .clear
        .small_column.left
          %p
            %div
              = f.label :real_price_mask
            %div
              = f.text_field :real_price_mask, :class => "money"
        .small_column.right
          %p
            %div
              = f.label :price_mask
            %div
              = f.text_field :price_mask, :class => "money"
        .clear
        %p#p_description
          %div
            = f.label :description
          %div
            = cktext_area :deal, :description, :toolbar => 'Basic'
        .clear
        .left.small_column
          %p
            %div
              = f.label :category
            %div
              = f.select :category, Deal.i18n_categories, {:include_blank => 'Selecione'}, :class => 'user-senha'
        .right.small_column
          %p
            %div
              = f.label :end_date
            %div
              = f.text_field :end_date, :class => "datepicker", :value => l(Date.today), :placeholder => 'dd/mm/aaaa'
        .clear
        .left.small_column
          %p
            %div
              = f.label :link
            %div
              = f.text_field :link, :placeholder => 'http(s)://'
        .small_column.right
          %p
            %div
              = f.label :image_url
            %div
              = f.text_field :image_url, :placeholder => 'http(s)://'
        .clear
        .left.small_column
          %p
            %div
              = f.label :company
            %div
              = f.text_field :company
        .right.small_column
          %p
            %div
              = f.label :city_id
            %div
              = f.select(:city_id, unsorted_grouped_options_for_select(@cities_state_hash), {:include_blank => 'Selecione'} )

        %br.clear
        = f.submit "", :class => 'bt-confirmar', :id => 'confirm'

  .clear

  .ttGlHome
    %h2= t('strings.suggestions')
    %h3= t('strings.suggestions_tip')
    = link_to t('strings.more'), deals_path
  .list-conteudo.best_deals
    - Deal.active.random.limit(4).each_with_index do |deal, index|
      = render :partial => 'deals/small_deal', :locals => {:deal => deal, :index => index }
:plain            
  <script type="text/javascript">
    $(function(){
      $(".money").maskMoney({symbol:"R$ ", decimal:",", thousands:"."})
      $( ".datepicker" ).datepicker({
        showButtonPanel: true, dateFormat: 'dd/mm/yy', minDate: new Date()
      });
    });
  </script>
