  .list-conteudo
    - @users.each_with_index do |user, index|
      %div{ :class => "top_user #{index == 0 || index == 3 ? 'first' : (index == 2 || index == 5 ? 'last' : '')}" }
        = render 'users/top_user', :user => user, :index => index

