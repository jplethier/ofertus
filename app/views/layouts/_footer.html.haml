          %a{ :href => "#{today? ? 'deals/today/home_and_decoration' : 'deals/active/home_and_decoration'}" }= Deal.i18n_category(Deal::CATEGORY_HOME_AND_DECORATION)
        %li
          %a{ :href => "#{today? ? 'deals/today/clothes' : 'deals/active/clothes'}" }= Deal.i18n_category(Deal::CATEGORY_CLOTHES)
        %li
          %a{ :href => "#{today? ? 'deals/today/culture' : 'deals/active/culture'}" }= Deal.i18n_category(Deal::CATEGORY_CULTURE)
        %li
          %a{ :href => "#{today? ? 'deals/today/car' : 'deals/active/car'}" }= Deal.i18n_category(Deal::CATEGORY_CAR)
        %li
          %a{ :href => "#{today? ? 'deals/today/others' : 'deals/active/others'}" }= Deal.i18n_category(Deal::CATEGORY_OTHER)

    .left.cat-last
      %h3= t('footer.informations')
      %ul
        %li
          %a{ :href => "/pages/help" }= t('footer.help')
      %br

      %h3= t('footer.contact')
      %ul
        %li
          %a{ :href => "http://ofertus.uservoice.com/" }= t('footer.talk_with_us')
        %li
          / %a{ :href => "http://blog.ofertus.com.br"}= t('footer.follow_our_blog')
      %br
      %br
      %br

      %a.crie-perfil{ :href => new_registration_path('user') }= t('footer.signup')
      %a.crie-perfil{ :href => new_session_path('user') }= t('footer.signin')

